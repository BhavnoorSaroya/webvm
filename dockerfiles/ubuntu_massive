# Use 32-bit Ubuntu 20.04
FROM --platform=i386 ubuntu:20.04

# Avoid interactive prompts
ARG DEBIAN_FRONTEND=noninteractive

# Update, upgrade, install packages, clean in one layer
RUN apt-get update && apt-get -y upgrade && \
    apt-get install -y --no-install-recommends \
        apt-utils gcc python3 python3-pip vim unzip ruby nodejs \
        fakeroot dbus whiptail hexedit patch manpages \
        file luajit make lua5.3 dialog curl less cowsay netcat-openbsd && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash user && echo "user:password" | chpasswd

# Copy example files and set permissions
COPY --chown=user:user ./examples /home/user/examples
RUN chmod -R +x /home/user/examples/lua

# Set working directory and environment variables
WORKDIR /home/user/
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"

# Set root password (optional)
RUN echo 'root:password' | chpasswd

# Default command
CMD [ "/bin/bash" ]
